# Visualization functions
def create_yield_chart(crop_data, selected_crop):
    """Create comparison chart"""
    crops = list(crop_data.keys())
    yields = [crop_data[c]['yield_per_acre_kg'] for c in crops]

    # Highlight selected crop
    colors = ['#3498db' if c != selected_crop else '#e74c3c' for c in crops]

    fig = go.Figure(data=[
        go.Bar(
            x=crops,
            y=yields,
            marker_color=colors,
            text=[f"{y:,.0f} kg/acre" for y in yields],
            textposition='auto',
        )
    ])

    fig.update_layout(
        title=f'Yield Comparison (kg per acre)',
        xaxis_title='Crops',
        yaxis_title='Yield (kg/acre)',
        template='plotly_white',
        height=400
    )

    return fig

def create_resource_chart(water, fertilizer):
    """Create resource requirement chart"""
    fig = make_subplots(
        rows=1, cols=2,
        subplot_titles=('üíß Water Requirement', 'üß™ Fertilizer Requirement'),
        specs=[[{'type': 'pie'}, {'type': 'bar'}]]
    )

    # Water chart
    fig.add_trace(
        go.Pie(
            labels=['Water Required', 'Available Rainfall*'],
            values=[water, max(water * 0.3, 100000)],
            hole=.4,
            marker=dict(colors=['#3498db', '#bdc3c7'])
        ),
        row=1, col=1
    )

    # Fertilizer chart
    fig.add_trace(
        go.Bar(
            x=['Nitrogen (N)', 'Phosphorus (P)', 'Potassium (K)'],
            y=[fertilizer['N'], fertilizer['P'], fertilizer['K']],
            marker_color=['#e74c3c', '#f39c12', '#27ae60'],
            text=[f"{v:.1f} kg" for v in [fertilizer['N'], fertilizer['P'], fertilizer['K']]],
            textposition='auto'
        ),
        row=1, col=2
    )

    fig.update_layout(
        height=400,
        showlegend=True,
        template='plotly_white'
    )

    return fig

