# Event handlers
def on_calculate_click(b):
    with output_area:
        clear_output(wait=True)

        # Get values
        crop = crop_dropdown.value
        area = area_input.value
        area_u = area_unit.value
        yield_u = yield_unit.value

        if area <= 0:
            print("‚ùå Error: Area must be greater than zero")
            return

        # Calculate
        results = calculator.calculate_yield(crop, area, area_u, yield_u)

        if results:
            # Display report
            display(calculator.generate_report(crop, results, area, area_u))

            # Create visualizations
            print("\n" + "="*60)
            print("üìä VISUAL ANALYTICS")
            print("="*60 + "\n")

            # Yield comparison chart
            fig1 = create_yield_chart(db.crops, crop)
            display(fig1)

            # Resource chart
            fig2 = create_resource_chart(results['water_required'], results['fertilizer'])
            display(fig2)

            # Additional recommendations
            print("\n" + "="*60)
            print("üí° RECOMMENDATIONS")
            print("="*60)

            crop_info = db.get_crop_info(crop)
            print(f"\n‚úÖ For {crop} cultivation:")
            print(f"   ‚Ä¢ Best sown in {crop_info['season']} season")
            print(f"   ‚Ä¢ Monitor for: {', '.join(crop_info['pests'][:2])}")
            print(f"   ‚Ä¢ Harvest after approximately {crop_info['growth_days']} days")
            print(f"\n‚ö†Ô∏è Storage recommendation: Keep at <14¬∞C with 12% moisture")

def on_reset_click(b):
    crop_dropdown.value = 'Wheat'
    area_input.value = 1.0
    area_unit.value = 'acres'
    yield_unit.value = 'quintals'
    with output_area:
