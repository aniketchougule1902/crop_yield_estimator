# Advanced Calculator Class
class AdvancedCropCalculator:
    def __init__(self):
        self.conversion_factors = {
            'area': {'acres': 1, 'hectares': 2.47105},
            'yield': {'kg': 1, 'quintals': 0.01, 'tons': 0.001}
        }

    def calculate_yield(self, crop_name, area, area_unit='acres', yield_unit='quintals'):
        """Calculate yield with unit conversions"""
        crop_info = db.get_crop_info(crop_name)
        if not crop_info:
            return None

        # Convert area to acres
        area_acres = area * self.conversion_factors['area'][area_unit]

        # Calculate yield in kg
        yield_kg = crop_info['yield_per_acre_kg'] * area_acres

        # Convert to desired unit
        yield_final = yield_kg * self.conversion_factors['yield'][yield_unit]

        return {
            'yield': yield_final,
            'yield_kg': yield_kg,
            'revenue': yield_final * crop_info['price_per_quintal'],
            'water_required': (crop_info['water_requirement_mm'] / 1000) * area_acres * 4046.86,  # in liters
            'fertilizer': {
                'N': crop_info['fertilizer_npk'][0] * area_acres,
                'P': crop_info['fertilizer_npk'][1] * area_acres,
                'K': crop_info['fertilizer_npk'][2] * area_acres
            }
        }

    def generate_report(self, crop_name, results, area, area_unit):
